<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/points_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1520"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@id/points_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/points_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/points_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/profile_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/coin_icon"
            app:layout_constraintTop_toBottomOf="@id/points_value"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/coin_icon"
            app:layout_constraintEnd_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/points_icon" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="44dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/stadium"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:alpha="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <ImageView
            android:id="@+id/mx_liga_icon"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:src="@drawable/mx_liga"
            app:layout_constraintRight_toLeftOf="@id/liga_mx"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:id="@+id/liga_mx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liga MX, Women, Clausura"
            android:layout_marginTop="28.5dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mx_liga_icon"/>

        <ImageView
            android:id="@+id/ldu_icon"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ldu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"
            android:layout_marginStart="40dp"
            />

        <ImageView
            android:id="@+id/nec_icon"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:src="@drawable/nec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="39dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDU"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ldu_icon"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEC"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nec_icon"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday,9 July 2021"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/ldu_icon"
            app:layout_constraintEnd_toStartOf="@id/nec_icon"
            app:layout_constraintTop_toBottomOf="@id/liga_mx"
            android:layout_marginTop="35dp"
            android:textColor="#BFFFFFFF" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:30 PM"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ldu_icon"
            app:layout_constraintEnd_toStartOf="@id/nec_icon"
            app:layout_constraintTop_toBottomOf="@id/date"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/one_card"
            android:layout_width="86dp"
            android:layout_height="21dp"
            app:cardBackgroundColor="#24FFFFFF"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="21dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1B1E2F"
                    android:textAlignment="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="57.60 %"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="9dp"
                android:textSize="13sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/x_card"
            android:layout_width="86dp"
            android:layout_height="21dp"
            app:cardBackgroundColor="#24FFFFFF"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toEndOf="@id/one_card"
            app:layout_constraintEnd_toStartOf="@id/two_card"
            app:layout_constraintTop_toBottomOf="@id/time"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="21dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1B1E2F"
                    android:textAlignment="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.50 %"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="9dp"
                android:textSize="13sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/two_card"
            android:layout_width="86dp"
            android:layout_height="21dp"
            app:cardBackgroundColor="#24FFFFFF"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toEndOf="@id/x_card"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="21dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1B1E2F"
                    android:textAlignment="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.90 %"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="9dp"
                android:textSize="13sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/checkin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="-100dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lineup"
            app:layout_constraintTop_toBottomOf="@id/one_card"
            app:cardCornerRadius="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/green_button">
                <ImageView
                    android:id="@+id/stadium_icon"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/stadium_checkin_icon"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/stadium_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STADIUM CHECKIN"
                    android:textSize="11sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"

                    app:layout_constraintStart_toEndOf="@id/stadium_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/win_points_stadium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Win points and coins"
                    android:textSize="10sp"
                    android:textColor="#FFF"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/stadium_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stadium_checkin"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lineup"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="-100dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@id/checkin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/two_card"
            app:cardCornerRadius="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_button">
                <ImageView
                    android:id="@+id/lineup_icon"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/lineup_create_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/lineup_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LINEUP CREATE"
                    android:textSize="11sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toEndOf="@id/lineup_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/win_points_lineup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Win points and coins"
                    android:textSize="10sp"
                    android:textColor="#FFF"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/lineup_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lineup_create"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIGA DEPORTIVA UNIVERSITARIA"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:layout_marginTop="32dp"
            android:textSize="28sp"
            android:textColor="#E8E8E8"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>